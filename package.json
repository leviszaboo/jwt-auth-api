    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "pino": "^8.19.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^10.3.1",
    "swagger-jsdoc": "^6.2.8",
